{
  "$schema":    "http://json-schema.org/draft-07/schema#",
  "id":         "file:/squadron.json#",
  "title":      "Squadron",
  "type":       "object",
  "properties": {
    "id":            {
      "type": "number"
    },
    "name":          {
      "type": "string"
    },
    "username":      {
      "type": "string"
    },
    "email":         {
      "type":   "string",
      "format": "email"
    },
    "created_at":    {
      "type":   "string",
      "format": "date-time"
    },
    "updated_at":    {
      "type":   "string",
      "format": "date-time"
    },
    "unknown_pass_count": {
      "type": "number"
    },
    "image":         {
      "type":       [
        "object",
        "null"
      ],
      "properties": {
        "url": {
          "type":   "string",
          "format": "uri"
        }
      },
      "required":   [
        "url"
      ]
    }
  },
  "required":   [
    "id",
    "name",
    "username",
    "email",
    "created_at",
    "updated_at",
    "unknown_pass_count"
  ]
}
